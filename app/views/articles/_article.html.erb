<div class="row ">
        <div class="col s10 offset-s1">
          <div class="card  white darken-1 card-panel hoverable">
            <div class="card-content ">
              <span class="card-title"><%=article.title%></span>
              <p><%=article.created_at%></p>
              <p class="text"><%=article.text%></p>
            </div>
            <div class="card-action">
              <%=link_to 'show', "/articles/#{article.id}"%>
              <% if user_signed_in? && current_user.id == article.user_id%>
              <%=link_to 'edit', "/articles/#{article.id}/edit" %>
              <%=link_to 'destroy', "/articles/#{article.id}" ,method: :delete ,data: { confirm: 'Are you sure?' }%>
              <% end %>
              <%= render partial: 'likes/like', locals: {article: article,likes: @likes, like: @like }%>
            </div>
          </div>
        </div>
      </div>
